{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/server.js" }
  ],
  "redirects": [
    { "source": "/", "destination": "/index.html", "permanent": true }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ],
  "error": {
    "404": "/index.html"
  }
}
